<mvc:View controllerName="logaligroup.Customers2.controller.HelloPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Panel headerText="{i18n>PanelTitle}" class="sapUiResponsiveMargin">
		<Button id="helloDialogButton" icon="sap-icon://action" text="{i18n>openDialogButtonText}" press=".onOpenDialog" class="sapUiSmallMarginEnd"></Button>
		<Button text="{i18n>onShowText}" press=".onShowHello" class="sapUiSmallMarginEnd"></Button>
		<Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
		<Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElementsText"></Text>
	</Panel>
</mvc:View>